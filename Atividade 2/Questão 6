import java.util.ArrayList;

public class ArrayList {
    public static void main(String[] args) {
       
        ArrayList<String> nomes = new ArrayList<>();
        nomes.add("Talles");
        nomes.add("Mariana");
        nomes.add("Richard");
        nomes.add("Leni");
        nomes.add("Lynn");

        
        nomes.remove(1);
        System.out.println("Lista após remover o segundo nome:");
        for (String nome : nomes) {
            System.out.println(nome);
        }

       
        nomes.remove(2);
        System.out.println("\nLista após remover o terceiro nome:");
        for (String nome : nomes) {
            System.out.println(nome);
        }

        if (nomes.get(0).equals("Talles")) {
            System.out.println("\nO primeiro nome é Talles.");
        } else {
            System.out.println("\nO primeiro nome não é Talles.");
        }
    }
}
